{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Docker: Attach to Node",
      "protocol": "auto",
      "port": 5858,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "/app",
      "outFiles": ["${workspaceFolder}/packages/server/dist/**/*.js"],
      "skipFiles": ["<node_internals>/**/*.js"]
    }
  ]
}
